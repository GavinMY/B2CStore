<?xml version="1.0" encoding="utf-8"?>
 <cn.mstar.store.view.CheckableRelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/checklayout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center_vertical"
    android:background="@color/white"
     android:padding="10dip"
     >
     <ImageView 
         android:id="@+id/image"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/unionpay"
         android:contentDescription="@string/app_name"/>
     <TextView 
         android:id="@+id/info"
         android:layout_marginLeft="10dip"
         android:layout_toRightOf="@id/image"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="@dimen/text_size_small"
         />
     <CheckBox 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:button="@null"
         android:clickable="false"
         android:focusable="false"
         android:focusableInTouchMode="false"
         android:background="@drawable/checkbox_bg"
         android:layout_alignParentRight="true"
         />
 </cn.mstar.store.view.CheckableRelativeLayout><!-- From: file:/D:/StudioProjects/MstarStoreAppcation/app/src/main/res/layout/item_pay_mode.xml -->